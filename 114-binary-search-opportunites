public static Integer search(List<Opportunity> opportunities, Integer target){
    // solution here
    Integer high = opportunities.size() - 1;
    Integer low = 0;
    
    while(low <= high){
        Integer medium = Integer.valueOf(Math.floor((low + high) / 2));
        if(opportunities.get(medium).amount == target){
            return medium;
        } else if(opportunities.get(medium).amount > target){
            high = medium - 1;
        } else if(opportunities.get(medium).amount < target){
            low = medium + 1;
        }
    }
    return -1;
}