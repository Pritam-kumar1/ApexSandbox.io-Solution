public String reverseWordsInASentence(String sentence){
    //your flawless code here
    if(sentence == null)
    return null;
    List<String> sen = sentence.split(' ');
    System.debug(sen);
    String rev= sen[sen.size()-1];
    for(Integer i = sen.size()-2 ; i>=0  ;i--){
        rev = rev +' '+ sen[i];
    }
    return rev;
}